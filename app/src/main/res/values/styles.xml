<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Advent.PopupMenu.Large" parent="@style/TextAppearance.AppCompat.Widget.PopupMenu.Large">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Theme.Advent.PopupMenu.Small" parent="@style/TextAppearance.AppCompat.Widget.PopupMenu.Small">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Theme.Advent.ActionMenu" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Theme.Advent.AppBar" parent="@style/ThemeOverlay.MaterialComponents.ActionBar">
        <item name="colorPrimary">@color/window_background</item>
    </style>

    <style name="Theme.Advent.Tab" parent="@style/TextAppearance.MaterialComponents.Tab">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Theme.Advent.Dialog" parent="@style/Theme.MaterialComponents.Light.Dialog">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Theme.Advent.Toolbar" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Theme.Advent.Body" parent="@style/Base.TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Theme.Advent.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="Theme.Advent.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />


    <style name="NavigationViewStyle" parent="Widget.MaterialComponents.NavigationView">
        <!--<item name="android:listPreferredItemHeightSmall">40dp</item>--><!-- menu item height-->
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/black_effective</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:foreground">?android:selectableItemBackground</item>
    </style>

    <style name="Button.Secondary" parent="Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_secondary_bg</item>
    </style>

    <style name="Button.Borderless">
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:paddingLeft">@dimen/guideline_margin</item>
        <item name="android:paddingTop">@dimen/guideline_margin</item>
        <item name="android:paddingRight">@dimen/guideline_margin</item>
        <item name="android:paddingBottom">@dimen/guideline_margin</item>
        <item name="android:drawablePadding">@dimen/guideline_quarter</item>
        <item name="android:drawableStart">@drawable/bookmark</item>
        <item name="android:drawableLeft">@drawable/bookmark</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Caption</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Theme.Phonograph.Notification" parent="@android:style/TextAppearance.StatusBar.EventContent" />

    <!-- set the rounded drawable as background to your bottom sheet -->
    <style name="BottomSheet" parent="@style/Widget.MaterialComponents.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet_fragment</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog">
        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/transparent
        </item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">
            @color/window_background
        </item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/primaryColor</item>
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>


</resources>
