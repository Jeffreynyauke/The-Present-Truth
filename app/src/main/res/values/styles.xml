<resources>


    <style name="Theme.Advent.AppBar" parent="@style/ThemeOverlay.MaterialComponents.ActionBar">
        <item name="colorPrimary">@color/background</item>
    </style>

    <style name="Theme.Advent.Tab" parent="@style/TextAppearance.MaterialComponents.Tab">
        <item name="android:fontFamily">@font/rmedium</item>
    </style>

    <style name="Theme.Advent.Toolbar" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/rmedium</item>
    </style>

    <style name="Theme.Advent.Body" parent="@style/Base.TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">@font/merriweatherreg</item>
    </style>

    <style name="Theme.Advent.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="Theme.Advent.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />


    <style name="NavigationViewStyle">
        <item name="android:textSize">30sp</item> <!-- menu item text size-->
        <item name="android:listPreferredItemHeightSmall">40dp</item><!-- menu item height-->
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/black_effective</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:foreground">?android:selectableItemBackground</item>
    </style>

    <style name="Button.Secondary" parent="Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_secondary_bg</item>
    </style>

    <style name="Theme.Phonograph.Notification" parent="@android:style/TextAppearance.StatusBar.EventContent" />


</resources>
