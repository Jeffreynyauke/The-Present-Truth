<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <FrameLayout
        android:id="@+id/icon_group"
        android:layout_width="@dimen/notification_large_icon_width"
        android:layout_height="@dimen/notification_large_icon_height">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/ic_video_library_black_24dp"
            android:scaleType="centerInside"
            tools:ignore="ContentDescription" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/icon_group"
        android:layout_toRightOf="@+id/icon_group"
        android:minHeight="@dimen/notification_large_icon_height"
        android:orientation="vertical">


        <TextView
            android:id="@+id/title"
            style="@style/SemiBoldLato"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="marquee"
            android:fadingEdge="horizontal"
            android:gravity="bottom"
            android:singleLine="true"
            android:text="Title"
            android:textAppearance="@style/Theme.Phonograph.Notification.Title"
            android:textColor="@color/textColorPrimary"
            android:textSize="16.5sp"
            tools:ignore="NestedWeights" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/timestamp"
                style="@style/RegularFontLato"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:fadingEdge="horizontal"
                android:singleLine="true"
                android:text="TextView"
                android:textAppearance="@style/Theme.Phonograph.Notification"
                android:textColor="@color/textColorSecondary" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/list_divider"
            android:paddingEnd="16dp"
            android:paddingRight="16dp" />
    </LinearLayout>
</RelativeLayout>
