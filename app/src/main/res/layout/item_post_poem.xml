<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/guideline_margin"
    android:background="@color/windowBackground"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image"
                android:layout_width="@dimen/image_post_author"
                android:layout_height="@dimen/image_post_author"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="@dimen/guideline_margin"
                android:layout_marginStart="@dimen/guideline_margin"
                android:layout_marginTop="@dimen/guideline_margin"
                android:adjustViewBounds="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/title"
                style="@style/BoldFontLato"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/image"
                android:layout_toRightOf="@+id/image"
                android:ellipsize="end"
                android:maxLines="6"
                android:paddingLeft="@dimen/guideline_margin"
                android:paddingRight="@dimen/guideline_margin"
                android:paddingTop="@dimen/guideline_margin"
                android:text="@string/lorem_ipsum_title"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/text_size_title_big"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_toEndOf="@+id/image"
                android:layout_toRightOf="@+id/image"
                android:ellipsize="end"
                android:maxLines="6"
                android:paddingLeft="@dimen/guideline_margin"
                android:paddingRight="@dimen/guideline_margin"
                android:paddingTop="@dimen/guideline_quarter"
                android:text="@string/lorem_ipsum_text"
                android:textColor="@color/textColorSecondary"
                android:textSize="@dimen/text_size_normal" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text">


                <ImageView
                    android:id="@+id/bookmark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/share"
                    android:layout_toStartOf="@+id/share"
                    android:paddingBottom="@dimen/guideline_space"
                    android:paddingLeft="@dimen/guideline_margin"
                    android:paddingRight="@dimen/guideline_margin"
                    android:paddingTop="@dimen/guideline_space"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/ic_bookmark_border_black_24dp" />

                <ImageView
                    android:id="@+id/share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingBottom="@dimen/guideline_space"
                    android:paddingEnd="@dimen/guideline_margin"
                    android:paddingLeft="@dimen/guideline_half"
                    android:paddingRight="@dimen/guideline_margin"
                    android:paddingStart="@dimen/guideline_half"
                    android:paddingTop="@dimen/guideline_space"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/ic_share_black_24dp" />

                <TextView
                    android:id="@+id/timestamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/guideline_margin"
                    android:paddingStart="@dimen/guideline_margin"
                    android:text="@string/lorem_ipsum_time"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/text_size_small" />

            </RelativeLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>


