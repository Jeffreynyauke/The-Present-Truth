<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/guideline_margin"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@color/windowBackground"
    android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:textSize="22sp"
                            android:textAlignment="center"
                            android:layout_below="@+id/feedImage1"
                            android:paddingTop="@dimen/guideline_margin"
                            android:paddingBottom="@dimen/guideline_half"
                            android:paddingLeft="@dimen/guideline_margin"
                            android:text="Jeffrey Nyauke"
                            android:textStyle="normal"
                            android:textColor="@color/textColorSecondary"
                            android:layout_alignParentTop="true" />

                    <TextView
                        android:layout_below="@+id/name"
                        android:id="@+id/txtStatusMsg"
                        android:textAlignment="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="12sp"
                        android:maxLines="5"
                        android:ellipsize="end"
                        android:paddingBottom="8dp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:text="Welcome to Kenya. the world of magic."
                         />

                    <RelativeLayout
                android:layout_width="match_parent"
                android:layout_below="@+id/txtStatusMsg"
                android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/timestamp"
                        android:text="10 mins ago"
                        android:layout_toLeftOf="@+id/overflow"
                        android:layout_alignParentLeft="true"
                      android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:paddingBottom="8dp"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="11dp" />


                    <ImageView
                            android:id="@+id/overflow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:scaleType="centerCrop"
                            android:padding="10dp"
                        android:layout_centerVertical="true"
                            android:src="@drawable/ic_more_vert_black_24dp"
                        android:layout_gravity="right" />

            </RelativeLayout>

                    <ImageView
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:id="@+id/feedImage1"
                        android:layout_width="@dimen/image_post_author"
                        android:adjustViewBounds="true"
                        android:layout_height="@dimen/image_post_author"
                        android:layout_marginRight="16dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="16dp" />


                </RelativeLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>
